# SQL - 2

**Design at least 10 SQL queries for selected real time application using SQL DML statements: Insert, select, Update, Delete with operators, functions and set operator.**
CREATE DATABASE IF NOT EXISTS demo_db;
USE demo_db;
DROP TABLE IF EXISTS employees;
CREATE TABLE employees (
    emp_id INT AUTO_INCREMENT PRIMARY KEY,
    emp_name VARCHAR(50),
    salary DECIMAL(10,2)
);
INSERT INTO employees (emp_name, salary) VALUES ('pratik', 55000);
INSERT INTO employees (emp_name, salary) VALUES ('rhutik', 40000);
INSERT INTO employees (emp_name, salary) VALUES ('om', 48000);
SELECT * FROM employees WHERE salary > 50000;
SELECT * FROM employees WHERE emp_name LIKE 'A%';
SELECT * FROM employees WHERE salary BETWEEN 40000 AND 60000;
UPDATE employees SET salary = salary * 1.10 WHERE emp_name = 'om';
DELETE FROM employees WHERE salary < 45000;
SELECT COUNT(*) AS total_employees,
       AVG(salary) AS average_salary,
       MAX(salary) AS highest_salary
FROM employees;
SELECT emp_id, UPPER(emp_name) AS employee_name, salary FROM employees;
SELECT emp_name, salary FROM employees WHERE salary > 60000
UNION
SELECT emp_name, salary FROM employees WHERE emp_name LIKE 'C%';
SELECT emp_name, salary FROM employees WHERE salary > 50000
UNION ALL
SELECT emp_name, salary FROM employees WHERE salary > 50000;
